{
    "include": ["server/**/*", "client/**/*"],
    "compilerOptions": {
        "module": "es6",
        "moduleResolution": "node",
        "target": "es6",
        "sourceMap": true,
        "outDir": "build",
        "allowJs": true,
        "checkJs": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "jsx": "react",
        "lib": ["es2017"]
    },
    "exclude": ["node_modules"]
}
