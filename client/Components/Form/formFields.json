    "register": [
        {
            "name": "username",
            "label": "Username",
            "placeholder": "Enter a username",
            "inputType": "text",
            "validationProperties": {
                "data-val": true,
                "data-val-required": "You must specify a username",
                "maxLength": 15,
                "data-val-length": "Username must be at least 3 characters and no more than 15 characters long",
                "data-val-length-min": 3,
                "data-val-length-max": 15,
                "data-val-regex": "Usernames must only use the characters a-z, 0-9, _ and -",
                "data-val-regex-pattern": "^[A-Za-z0-9_-]+$"
            },
            "labelClass": "col-sm-4",
            "fieldClass": "col-sm-7"
        },
        {
            "name": "email",
            "label": "Email Address",
            "placeholder": "Enter an email address",
            "inputType": "text",
            "validationProperties": {
                "data-val": true,
                "data-val-required": "You must specify an email address",
                "data-val-regex": "Please enter a valid email address",
                "data-val-regex-pattern": "^(([^<>()\\[\\]\\.,;:\\s@\"]+(\\.[^<>()\\[\\]\\.,;:\\s@\"]+)*)|(\".+\"))@((\\[[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}])|(([a-zA-Z\\-0-9]+\\.)+[a-zA-Z]{2,}))$"
            },
            "labelClass": "col-sm-4",
            "fieldClass": "col-sm-7"
        },
        {
            "name": "password",
            "label": "Password",
            "placeholder": "Enter a password",
            "inputType": "password",
            "validationProperties": {
                "data-val": true,
